{
  "name": "sea-battle-modern",
  "version": "1.0.0",
  "description": "Modern Sea Battle (Battleship) game implementation with ES6+ features and comprehensive testing",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" npx jest",
    "test:coverage": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" npx jest --coverage",
    "test:watch": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" npx jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "battleship",
    "sea-battle",
    "game",
    "es6",
    "modern-javascript",
    "testing"
  ],
  "author": "Sea Battle Modernization Project",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "jest": "^29.5.0"
  },
  "dependencies": {
    "readline": "^1.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/utils/input-handler.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
